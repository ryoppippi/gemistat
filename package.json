{
	"name": "gemistat",
	"type": "module",
	"version": "0.1.0",
	"private": true,
	"description": "Gemini CLI wrapper with usage tracking",
	"license": "MIT",
	"bin": "./dist/index.js",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsdown",
		"format": "bun run lint --fix",
		"lint": "eslint --cache .",
		"prepack": "bun run build && bun clean-pkg-json -r scripts.preinstall",
		"prepare": "git config --local core.hooksPath .githooks",
		"release": "bun lint && bun typecheck && vitest && bun run build && bumpp",
		"start": "bun run src/index.ts",
		"test": "vitest",
		"typecheck": "tsgo --noEmit"
	},
	"devDependencies": {
		"@mizchi/lsmcp": "^0.10.0",
		"@praha/byethrow": "^0.6.3",
		"@praha/byethrow-mcp": "^0.1.2",
		"@ryoppippi/eslint-config": "^0.3.7",
		"@typescript/native-preview": "^7.0.0-dev.20250824.1",
		"bumpp": "^10.2.3",
		"cli-table3": "^0.6.5",
		"consola": "^3.4.2",
		"eslint": "^9.34.0",
		"eslint-plugin-format": "^1.0.1",
		"gunshi": "latest",
		"lint-staged": "^16.1.5",
		"picocolors": "^1.1.1",
		"publint": "^0.3.12",
		"sort-package-json": "^3.4.0",
		"string-width": "^7.2.0",
		"tsdown": "^0.14.1",
		"unplugin-macros": "^0.18.0",
		"unplugin-unused": "^0.5.2",
		"vitest": "^3.2.4",
		"zod": "^4.1.1"
	},
	"lint-staged": {
		"*": [
			"eslint --cache --fix",
			"bun vitest --passWithNoTests"
		],
		"package.json": [
			"sort-package-json"
		]
	}
}
